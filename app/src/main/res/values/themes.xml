<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Technerds" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Forms" parent="Theme.Technerds">
        <item name="android:background">@drawable/forms</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:layout_marginStart">30sp</item>
        <item name="android:layout_marginEnd">30sp</item>
    </style>

    <style name="FormsTitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">30sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="fontStyle">normal</item>
    </style>

    <style name="OutlineEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorControlNormal">@color/colorFieldForms</item>
        <item name="colorControlActivated">@color/colorFieldForms</item>
        <item name="colorControlHighlight">@color/colorFieldForms</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/box_radios_form_fields</item>
        <item name="boxCornerRadiusBottomStart">@dimen/box_radios_form_fields</item>
        <item name="boxCornerRadiusTopEnd">@dimen/box_radios_form_fields</item>
        <item name="boxCornerRadiusTopStart">@dimen/box_radios_form_fields</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="boxStrokeWidth">@dimen/box_stroke</item>
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="OutlineEditText.TextInputEditText">
        <item name="android:textSize">@dimen/form_text_size</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:maxLength">@integer/forms_max_length</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonLogin">
        <item name="android:textSize">@dimen/button_textSize</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@drawable/button_rounded</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/button_paddingStart</item>
        <item name="android:paddingEnd">@dimen/button_paddingEnd</item>
        <item name="android:paddingTop">@dimen/button_paddingTop</item>
        <item name="android:paddingBottom">@dimen/button_paddingBottom</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="OutlineEditTextPassword" parent="OutlineEditText">
        <item name="passwordToggleEnabled">true</item>
        <item name="passwordToggleTint">@color/colorFieldForms</item>
    </style>

    <style name="HelpView">
        <item name="android:textColor">@color/colorFieldForms</item>
        <item name="android:textSize">@dimen/helpTextSize</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/helpMarginTop</item>
        <item name="android:layout_marginBottom">@dimen/helpMarginBottom</item>
    </style>

</resources>