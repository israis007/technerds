<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fra_rec_cl_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/fra_rec_llc_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Forms"
        android:orientation="vertical"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/fra_rec_actv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fra_recover_title"
            style="@style/FormsTitle"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fra_rec_til_mail"
            style="@style/OutlineEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/labels_margin"
            android:layout_marginStart="@dimen/labels_margin"
            android:layout_marginEnd="@dimen/labels_margin"
            android:hint="@string/fra_recover_h1"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fra_rec_tiet_mail"
                style="@style/OutlineEditText.TextInputEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textWebEmailAddress"
                android:digits="@string/TF_Email"
                android:imeOptions="actionDone"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/fra_rec_actv_help"
            style="@style/HelpView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fra_recover_t1"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>